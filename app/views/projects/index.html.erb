<div class="page-header">
  <h1>Projects</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Author</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, user_project_path(project.user, project) %></td>
        <td><%= project.description %></td>
        <td><%= project.user.name %></td>
        <td>
          <%= link_to 'Edit', edit_user_project_path(project.user, project), class: 'btn btn-default btn-xs' %>
          <%= link_to 'Destroy', user_project_path(project.user, project), method: :delete,
                      data: { confirm:  'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_user_project_path(current_user), class: 'btn btn-primary' if current_user %>
