<div class="page-header">
  <h1>Project</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @project.name %></dd>
  <dt><strong>Description:</strong></dt>
  <dd><%= @project.description %></dd>
  <dt><strong>Author:</strong></dt>
  <dd><%= @project.user.name %></dd>
</dl>

<%= link_to 'Back', user_projects_path(current_user), class: 'btn btn-default' %>
<%= link_to 'Edit', edit_user_project_path(current_user, @project), class: 'btn btn-default' %>
<%= link_to 'Destroy', user_project_path(current_user, @project), method: 'delete', confirm:  'Are you sure?', class: 'btn btn-danger' %>
